// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Capability {
  id          Int      @id @default(autoincrement())
  projectDid  String
  capability  String
  template    String
  allow       String[]
  validateKYC Boolean?
}

model Public {
  key         String @id
  data        Bytes
  contentType String
}

model Transaction {
  hash             String   @id
  projectDid       String
  data             String
  nonce            String
  signatureType    String
  signatureValue   String
  timestamp        DateTime
  capability       String
  blockHeight      String?
  blockHash        String?
  blockResponeCode Int?
  blockError       String?

  @@index([hash])
}

model Wallet {
  did       String @id
  signKey   String
  verifyKey String
}

model Agent {
  agentDid    String        @id
  projectDid  String
  email       String
  name        String
  role        String
  txHash      String
  creator     String
  created     String
  AgentStatus AgentStatus[]
}

model AgentStatus {
  id         Int    @id @default(autoincrement())
  agent      Agent  @relation(fields: [agentDid], references: [agentDid])
  agentDid   String
  projectDid String
  status     String
  role       String
  version    String
  txHash     String
  creator    String
  created    String
}

model Claim {
  txHash          String          @id
  claimTemplateId String
  projectDid      String
  context         String
  type            String
  issuerId        String
  claimSubjectId  String
  items           Json?
  dateTime        String
  creator         String
  created         String
  EvaluateClaim   EvaluateClaim[]
}

model EvaluateClaim {
  id         Int    @id @default(autoincrement())
  claim      Claim  @relation(fields: [claimId], references: [txHash])
  claimId    String
  projectDid String
  status     String
  txHash     String
  creator    String
  created    String
  version    Int
}

model Project {
  projectDid  String @id
  projectData Json?
  txHash      String
  creator     String
  created     String
}

model ProjectDoc {
  projectDid String @id
  projectDoc Json?
  txHash     String
  creator    String
  created    String
}

model ProjectStatus {
  id         Int    @id @default(autoincrement())
  projectDid String
  status     String
  txHash     String
  creator    String
  created    String
}
